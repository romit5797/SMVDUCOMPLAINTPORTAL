<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".FifthActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_navigation"
                android:animateLayoutChanges="true">

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:fillViewport="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lodge">>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="8">

                        <TextView
                            android:id="@+id/tx"
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="CONTACT US"
                            android:textColor="@android:color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/tx2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email: icnetwork@smvdu.ac.in"
                            android:textColor="#383838"

                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tx3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Address : School of Computer Science and Engineering, Network Centre Shri Mata Vaishno Devi University PO Kakryal Katra (JK) India 182320"
                            android:textColor="#383838"
                            android:textSize="24sp" />
                        <TextView
                            android:id="@+id/tx5"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fax: (+91) 01991-285694"
                            android:textColor="#383838"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tx4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tel: (+91) 01991-285535, Ext 107, 116 "
                            android:textColor="#383838"
                            android:textSize="24sp" />




                    </LinearLayout>


                </ScrollView>

            </FrameLayout>

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/colorAccent"
                app:itemIconTint="@android:color/white"
                app:itemTextColor="@android:color/white"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

